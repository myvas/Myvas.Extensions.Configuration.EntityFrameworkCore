@model ConfigurationValue

@{
    ViewData["Title"] = "创建参数";
}

<header class="bar bar-nav"></header>
<h2>@ViewData["Title"]</h2>

<form asp-action="@nameof(EfConfigController.Create)" method="post">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Key" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="@nameof(EfConfigController.Index)">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
